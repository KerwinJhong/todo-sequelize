<div class="row" style="margin-top: 20vh;">
  <div class="col-md-5 m-auto">
    <div class="card card-body text-left">
      <h1 class="text-center mb-3">
        Register
      </h1>
      <form action="/users/register" method="POST" class="mb-3">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{{name}}}" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{{email}}}"
            required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
            value="{{{password}}}" minlength="6" required />
        </div>
        <div class="form-group" style="margin-bottom: 5vh;">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="{{{password2}}}" minlength="6" required />
        </div>
        <div style="padding-top: 5vh;border-top: 2px solid #E9ECEF;">
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </div>
      </form>
      {{> messages}}
      <p class="lead mt-2" style="font-size: 16px;">Have An Account?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>